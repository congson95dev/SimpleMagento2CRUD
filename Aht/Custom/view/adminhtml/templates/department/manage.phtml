<?php

/**
 * @var \Aht\Custom\Block\Adminhtml\Department\Manage $block
 */

$departments = $block->getDepartments();
$adminUrl = $block->getBaseUrl() . $this->helper('Magento\Backend\Helper\Data')->getAreaFrontName();
$addlUrl = $adminUrl . '/department/manage/add';
$detailUrl = $adminUrl . '/department/manage/detail';
$deleteUrl = $adminUrl . '/department/manage/delete';
?>
<button class="add-department"><a href="<?= $addlUrl ?>">Add New</a></button>
<table>
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Action</th>
	</tr>
<?php foreach ($departments as $department): ?>
	<tr>
		<td><?= $department->getId(); ?></td>
		<td><?= $department->getName(); ?></td>
		<td>
			<a href="<?= $detailUrl . '/id/' . $department->getId(); ?>">Edit</a>
			<a href="<?= $deleteUrl . '/id/' . $department->getId(); ?>">Delete</a>
		</td>
	</tr>
<?php endforeach; ?>
</table>

